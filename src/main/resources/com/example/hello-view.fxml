<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">
    <top>
        <HBox BorderPane.alignment="CENTER">
            <Label fx:id="messageLabel" />
        </HBox>
    </top>
    <center>
               <ListView fx:id="listView"/>
   </center>
   <bottom>
      <HBox spacing="3" BorderPane.alignment="CENTER">
          <TextField fx:id="textField" promptText="Enter message..." HBox.hgrow="ALWAYS" onAction="#sendMessage"/>

          <Button fx:id="sendButton" onAction="#sendMessage" text="Send" />

      </HBox>

   </bottom>

</BorderPane>
